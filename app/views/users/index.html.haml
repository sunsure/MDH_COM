- title t('.title')
.page-header
  %h3=t '.title'

%table.table.table-striped
  %thead
    %tr
      %th= User.human_attribute_name(:first_name)
      %th= User.human_attribute_name(:last_name)
      %th= User.human_attribute_name(:email)
      %th= User.human_attribute_name(:created_at)
      %th=t '.actions', default: t("helpers.actions")
  %tbody
    - @users.each do |user|
      %tr
        %td= link_to user.first_name, user_path(user)
        %td= user.last_name
        %td= user.email
        %td=l(user.created_at, format: :short)
        %td
          = link_to t('.edit', default: t("helpers.links.edit")), edit_user_path(user), class: 'btn btn-mini'
          = link_to t('.destroy', default: t("helpers.links.destroy")), user_path(user), id: "user_destroy_#{user.id}", method: :delete, data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) }, class: 'btn btn-mini btn-danger'

= link_to t('.new', default: t("helpers.links.new")), new_user_path, class: 'btn btn-primary'
