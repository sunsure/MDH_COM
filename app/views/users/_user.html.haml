%tr
  %td= link_to user.last_name, user_path(user)
  %td= user.first_name
  %td= user.email
  %td=l(user.created_at, format: :short)
  %td
    = link_to edit_user_path(user), class: 'btn btn-mini btn-warning' do
      %i.icon-edit.icon-white
      %span.addon= t('.edit', default: t("helpers.links.edit"))
    - if current_user == user
      = link_to "#", disabled: true, class: 'btn btn-mini btn-danger pop', data: { title: t('.delete_user_title'), content: t('.delete_user_content') } do
        %i.icon-remove.icon-white
        %span.addon= t('.destroy', default: t("helpers.links.destroy"))
    - else
      = link_to user_path(user), method: :delete, data: { confirm: t('.confirm', default: t("helpers.links.confirm")) }, id: "user_destroy_#{user.id}", class: 'btn btn-mini btn-danger', id: "user_destroy_#{user.id}" do
        %i.icon-remove.icon-white
        %span.addon= t('.destroy', default: t("helpers.links.destroy"))
