!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : t('application.errors.missing_title')
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"
    = stylesheet_link_tag "application", media: "all"
    %link(href="images/apple-touch-icon-144x144.png" rel="apple-touch-icon-precomposed" sizes="144x144")
    %link(href="images/apple-touch-icon-114x114.png" rel="apple-touch-icon-precomposed" sizes="114x114")
    %link(href="images/apple-touch-icon-72x72.png" rel="apple-touch-icon-precomposed" sizes="72x72")
    %link(href="images/apple-touch-icon.png" rel="apple-touch-icon-precomposed")
    %link(href="/images/favicon.ico" rel="shortcut icon")


  %body
    .navbar.navbar-fixed-top.navbar-inverse
      .navbar-inner
        .container-fluid
          %a.btn.btn-navbar(data-target=".nav-collapse" data-toggle="collapse")
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          = link_to t('application.titles.brand_name'), root_path, class: "brand"
          .container.nav-collapse
            %ul.nav
              %li
                = link_to "https://github.com/mark-d-holmberg" do
                  = image_tag("/images/favicon_github_white.png")
                  %span.addon GitHub
              - if can? :index, Article
                %li
                  = link_to articles_path do
                    %i.icon-list-alt.icon-white
                    %span.addon Articles
              - if can? :manage, User
                %li
                  = link_to users_path do
                    %i.icon-user.icon-white
                    %span.addon Users
            %ul.nav.pull-right
              - if current_user
                %li
                  = link_to logout_path do
                    %i.icon-off.icon-white
                    %span.addon Logout
              - else
                %li
                  = link_to login_path do
                    %i.icon-off.icon-white
                    %span.addon Login

    .container-fluid
      .row-fluid
        .span9
          = bootstrap_flash
          = yield
        .span3
          %div.well.sidebar-nav
            - if current_user
              .nav-header Actions
              - if content_for?(:sidebar)
                = yield(:sidebar)
              - else
                = link_to "#", class: "btn btn-info btn-small btn-block" do
                  %i.icon-question-sign.icon-white
                  %span.addon Nothing to show, Why?
            - else
              - if content_for?(:sidebar)
                = yield(:sidebar)
              - else
                - unless hide_explanation_sidebar?
                  %h3= t('application.titles.my_name')
                  %p= t('layout.sidebar.content')
      %footer
        %p= t('application.copyright', year: Time.now.year).html_safe
    /
      Javascripts
      \==================================================
    / Placed at the end of the document so the pages load faster
    = javascript_include_tag "application"
