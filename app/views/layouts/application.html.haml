!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : t('application.errors.missing_title')
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"
    = stylesheet_link_tag "application", media: "all"
    %link(href="images/apple-touch-icon-144x144.png" rel="apple-touch-icon-precomposed" sizes="144x144")
    %link(href="images/apple-touch-icon-114x114.png" rel="apple-touch-icon-precomposed" sizes="114x114")
    %link(href="images/apple-touch-icon-72x72.png" rel="apple-touch-icon-precomposed" sizes="72x72")
    %link(href="images/apple-touch-icon.png" rel="apple-touch-icon-precomposed")
    %link(href="/images/favicon.ico" rel="shortcut icon")


  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container-fluid
          %a.btn.btn-navbar(data-target=".nav-collapse" data-toggle="collapse")
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          = link_to t('application.titles.main_brand'), root_path, class: "brand"
          .container.nav-collapse
            - if current_user
              %ul.nav
                %li= link_to "Users", users_path
                %li= link_to "Link 2", "#"
                %li= link_to "Link 3", "#"
            %ul.nav.pull-right
              - if current_user
                %li
                  = link_to logout_path do
                    %i.icon-off.icon-white
                    %span.add-on Logout
              - else
                %li
                  = link_to login_path do
                    %i.icon-off.icon-white
                    %span.add-on Login

    .container-fluid
      .row-fluid
        .span9
          = bootstrap_flash
          = yield
        .span3
          .well.sidebar-nav
            - if current_user
              %ul.nav.nav-list
                %li.nav-header Sidebar
                %li= link_to "Link 1", "#"
                %li= link_to "Link 2", "#"
                %li= link_to "Link 3", "#"
              - else
                %h3= t('application.titles.my_name')
                %p= t('layout.sidebar.content')
      %footer
        %p= t('application.copyright', year: Time.now.year).html_safe
    /
      Javascripts
      \==================================================
    / Placed at the end of the document so the pages load faster
    = javascript_include_tag "application"
