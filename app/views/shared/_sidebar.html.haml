%div.sidebar-nav{ class: content_for?(:sidebar) ? "well" : nil }
  - if current_user
    - if content_for?(:sidebar)
      .nav-header= t("helpers.actions")
      = yield(:sidebar)
    - else
      - if show_sidebar_carousel?
        = render "shared/carousel"
      - else
        .nav-header= t("helpers.actions")
        = link_to "#", data: { placement: "bottom", title: t("layout.explanation.title"), content: t("layout.explanation.content") }, class: "pop btn btn-info btn-small btn-block" do
          %i.icon-question-sign.icon-white
          %span.addon= t("layout.explanation.nothing_to_show")
  - else
    - if content_for?(:sidebar)
      = yield(:sidebar)
    - else
      - if show_sidebar_carousel?
        = render "shared/carousel"
