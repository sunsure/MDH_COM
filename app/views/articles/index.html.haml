- title t('.title')
.page-header
  %h3= t '.title'

- if current_user
  - content_for(:sidebar) do
    = link_to '#', class: "btn btn-small btn-block" do
      %i.icon-envelope
      %span.addon Inbox
    = link_to '#', class: "btn btn-small btn-block" do
      %i.icon-user
