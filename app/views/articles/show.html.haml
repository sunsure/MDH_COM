- title t '.title', article_title: @article.title
.page-header
  %h3=t '.title', article_title: @article.title

%div#article_header
  %h1#big_arrow= "&#8627".html_safe
  %h3#author= @article.user.try(:name)
  %h5#published_at= l(@article.published_at, format: :short) if @article.published_at?
  %h5#updated_at= l(@article.updated_at, format: :short) if @article.updated_at?

- content_for(:sidebar) do
  - if can? :edit, @article
    = link_to edit_article_path(@article), class: 'btn btn-warning btn-small btn-block' do
      %i.icon-edit.icon-white
      %span.addon= t('.edit', default: t("helpers.links.edit"))
  - if can? :destroy, @article
    = link_to article_path(@article), method: "delete", data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) }, class: 'btn btn-danger btn-small btn-block' do
      %i.icon-remove.icon-white
      %span.addon= t('.destroy', default: t("helpers.links.destroy"))

%section#content= to_markdown(@article.content)
