- title t '.title'
.page-header
  %h3= t '.title'

= render 'search', placeholder: 'Search Tags'

- if @tags.present?
  = paginate @tags

  %table.table.table-striped
    %thead
      %tr
        %th Tag Name
        %th Occurences
    %tbody
    - @tags.each do |tag|
      %tr
        %td= link_to tag.name, tag_articles_path(tag.name)
        %td= tag.taggings.count