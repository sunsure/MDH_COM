- title t(".title")
.page-header
  %h3=t '.title'

%p= t ".instructions"

= form_tag password_resets_path, class: 'form-inline', method: :post do
  = label_tag :email
  = text_field_tag "user[email]", params[:user].try(:[], :email)
  .form-actions
    = submit_tag t(".submit") , class: "btn btn-primary"
